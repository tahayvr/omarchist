{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Omarchist",
	"version": "0.3.1",
	"identifier": "com.omarchist.tahayvr",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"removeUnusedCommands": true
	},
	"plugins": {
		"cli": {
			"description": "Omarchy GUI Application",
			"subcommands": {
				"refresh": {
					"description": "Refresh the application theme (only if running)"
				}
			}
		}
	},
	"app": {
		"windows": [
			{
				"title": "Omarchist",
				"resizable": true,
				"fullscreen": false,
				"decorations": false,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["deb"],
		"category": "Utility",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": ["resources/**/*"]
	}
}
