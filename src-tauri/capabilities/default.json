{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "cli:default",
    "shell:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "/usr/share/X11/xkb/**/*" },
        { "path": "/usr/local/share/X11/xkb/**/*" },
        { "path": "/etc/X11/xkb/**/*" },
        { "path": "/run/current-system/sw/share/X11/xkb/**/*" },
        { "path": "/nix/var/nix/profiles/default/share/X11/xkb/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "/usr/share/X11/xkb/**/*" },
        { "path": "/usr/local/share/X11/xkb/**/*" },
        { "path": "/etc/X11/xkb/**/*" },
        { "path": "/run/current-system/sw/share/X11/xkb/**/*" },
        { "path": "/nix/var/nix/profiles/default/share/X11/xkb/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "/usr/share/X11/xkb/**/*" },
        { "path": "/usr/local/share/X11/xkb/**/*" },
        { "path": "/etc/X11/xkb/**/*" },
        { "path": "/run/current-system/sw/share/X11/xkb/**/*" },
        { "path": "/nix/var/nix/profiles/default/share/X11/xkb/**/*" }
      ]
    }
  ]
}